{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": 
    {
    "webAppName": {
      "type": "string",
      "defaultValue": "sdpaks-minio-prod",
      "metadata": {
        "description": "Base name of the resource such as web app name and app service plan"
      }
    },
    "storageAccountName": {
      "type": "string"
    },
    "minioAccessKey": {
      "type": "SecureString"
    },
    "minioSecretKey": {
      "type": "SecureString"
    },
    "buckets": {
      "type": "array",
      "defaultValue": [
        "artifacts",
        "backup",
        "lfs",
        "packages",
        "pseudonymizer",
        "registry",
        "tmp",
        "uploads"
      ]
    }
  },
  "variables": {
    "webAppPortalName": "[concat(parameters('webAppName'), '-webapp')]",
    "appServicePlanName": "[concat('AppServicePlan-', parameters('webAppName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "comments": "Storage account for minio to save data to",
      "apiVersion": "2019-04-01",
      "sku": {
        "name": "Standard_GRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot"
      }
    },
    {
      "name": "[concat(parameters('storageAccountName'), '/default/', 'gitlab-', parameters('buckets')[copyIndex()], '-storage')]",
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "comments": "Buckets under the selected storage account",
      "apiVersion": "2018-07-01",
      "dependsOn": [
        "[parameters('storageAccountName')]"
      ],
      "copy": {
        "name": "storagecopy",
        "count": "[length(parameters('buckets'))]"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[resourceGroup().location]",
      "comments": "App service plan required for the web app to run",
      "sku": {
        "name": "S1"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[variables('webAppPortalName')]",
      "location": "[resourceGroup().location]",
      "comments": "Instance of minio",
      "kind": "app",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "https://index.docker.io"
            },
            {
              "name": "MINIO_ACCESS_KEY",
              "value": "[parameters('minioAccessKey')]"
            },
            {
              "name": "MINIO_SECRET_KEY",
              "value": "[parameters('minioSecretKey')]"
            },
            {
              "name": "PORT",
              "value": "9000"
            },
            {
              "name": "WEBSITE_HTTPLOGGING_RETENTION_DAYS",
              "value": "30"
            }
          ],
          "linuxFxVersion": "DOCKER|minio/minio",
          "appCommandLine": "gateway azure --compat",
          "alwaysOn": true
        }
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[parameters('storageAccountName')]"
    },
    "webAppName": {
      "type": "string",
      "value": "[variables('webAppPortalName')]"
    },
    "appPlanName": {
      "type": "string",
      "value": "[variables('appServicePlanName')]"
    }
  }
}
