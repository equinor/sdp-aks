{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The name of the environment. E.g. 'dev' "
            }
        }
    },
    "variables": {
        "aksRgName": "[concat('sdpaks-', parameters('environment'))]",
        "dnsRgName": "[concat(variables('aksRgName'),'-dns')]",
        "gitlabRgName": "[concat(variables('aksRgName'),'-gitlab-storage')]",
        "location": "norwayeast",

        "templateBaseUrl": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/base/')]",
        "parametersBaseUrl": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/', parameters('environment'), '/')]",
        "commonTemplateUrl": "[concat(variables('templateBaseUrl'), 'deploy-arm.json')]",
        "commonParametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-arm.parameters.json')]",

        "linkedTemplates": [
            {
                "name": "aksTemplate",
                "rgName": "[variables('aksRgName')]",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'deploy-aks.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-aks.parameters.json')]"
            },
            {
                "name": "dnsTemplate",
                "rgName": "[variables('dnsRgName')]",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'deploy-dns.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-dns.parameters.json')]"
            },
            {
                "name": "nsrecordTemplate",
                "rgName": "k8s-infrastructure",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'assign-nsrecord.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'assign-nsrecord.parameters.json')]"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[variables('linkedTemplates')[copyIndex()].name]",
            "copy": {
                "name": "rgCopy",
                "count": "[length(variables('linkedTemplates'))]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "resourceGroup": "[variables('linkedTemplates')[copyIndex()].rgName]",
            "name": "[concat('nestedTemplate-', variables('linkedTemplates')[copyIndex()].name)]",
            "copy": {
                "name": "templateCopy",
                "count": "[length(variables('linkedTemplates'))]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linkedTemplates')[copyIndex()].templateUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('linkedTemplates')[copyIndex()].parametersUrl]",
                    "contentVersion":"1.0.0.0"
                }
            }
        }
    ]
}