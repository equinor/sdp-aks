{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworks_aks_externalid": {
            "defaultValue": "/subscriptions/b18da12e-efa1-4642-8fec-b6580b00212c/resourceGroups/MC_sdpaks-nor_sdpaks-nor-k8s_norwayeast/providers/Microsoft.Network/virtualNetworks/aks-vnet-37359074",
            "type": "String"
        }
    },
    "variables": {
        "buckets": {
            "defaultValue": [
                "velero-common",
                "velero-prod",
                "velero-dev"
            ]
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "sdpaksbackup",
            "location": "norwayeast",
            "comments": "Common storage account for velero",
            "sku": {
                "name": "Standard_GRS"
            },
            "kind": "StorageV2",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                        {
                            "id": "[concat(parameters('virtualNetworks_aks_externalid'), '/subnets/aks-subnet')]",
                            "action": "Allow"
                        }
                    ],
                    "ipRules": [],
                    "defaultAction": "Deny"
                },
                "supportsHttpsTrafficOnly": true,
                "accessTier": "Cool"
            },
            "tags": {
                "cost": "backup",
                "cluster": "common"
            }
        }
    ]
}