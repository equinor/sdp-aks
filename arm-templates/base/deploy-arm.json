{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The name of the environment."
            }
        }
    },
    "variables": {
        "rgName": "[concat('sdpaks-', parameters('environment'))]",
        "dnsRgName": "[concat(variables('rgName'),'-dns')]",
        "gitlabRgName": "[concat(variables('rgName'),'-gitlab-storage')]",
        "location": "norwayeast"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[variables('rgName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[variables('dnsRgName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[variables('gitlabRgName')]",
            "properties": {}
        },
        {
            "apiVersion": "2018-05-01",
            "name": "aksTemplate",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[variables('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/base/deploy-aks.json')]"
                },
                "parametersLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/',parameters('environment'), '/deploy-aks.parameters.json')]",
                    "contentVersion":"1.0.0.0"
                }
            }
        },
        {
            "apiVersion": "2018-05-01",
            "name": "dnsTemplate",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[variables('dnsRgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('dnsRgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/base/deploy-dns.json')]"
                },
                "parametersLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/',parameters('environment'), '/deploy-dns.parameters.json')]",
                    "contentVersion":"1.0.0.0"
                }
            }
        },
        {
            "apiVersion": "2018-05-01",
            "name": "nsrecordAssignmentTemplate",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "k8s_infrastructure",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/base/assign-nsrecord.json')]"
                },
                "parametersLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/',parameters('environment'), '/arm-templates/',parameters('environment'), '/assign-nsrecord.parameters.json')]",
                    "contentVersion":"1.0.0.0"
                }
            }
        }
    ],
    "outputs": {}
}