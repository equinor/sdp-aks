{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The name of the environment. E.g. 'dev' "
            }
        }
    },
    "variables": {
        "rootRgName": "[concat('sdpaks-', parameters('environment'))]",
        "location": "norwayeast",

        "templateBaseUrl": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/', parameters('environment'), '/arm-templates/base/')]",
        "parametersBaseUrl": "[concat('https://raw.githubusercontent.com/equinor/sdp-aks/', parameters('environment'), '/arm-templates/', parameters('environment'), '/')]",
        "commonTemplateUrl": "[concat(variables('templateBaseUrl'), 'deploy-arm.json')]",
        "commonParametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-arm.parameters.json')]",

        "templateLoop1": [
            {
                "name": "aksTemplate",
                "rgName": "[variables('rootRgName')]",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'deploy-aks.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-aks.parameters.json')]"
            }
        ],
        "templateLoop2": [
            {
                "name": "dnsTemplate",
                "rgName": "[concat(variables('rootRgName'),'-dns')]",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'deploy-dns.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-dns.parameters.json')]"
            },
            {
                "name": "gitlabStorageTemplate",
                "rgName": "[concat(variables('rootRgName'),'-gitlab-storage')]",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'deploy-gitlab-storage.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-gitlab-storage.parameters.json')]"
            },
            {
                "name": "storageTemplate",
                "rgName": "sdpaks-common-backup",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'deploy-storage.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'deploy-storage.parameters.json')]"
            }
        ],
        "templateLoop3": [
                {
                "name": "nsrecordTemplate",
                "rgName": "k8s-infrastructure",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'assign-nsrecord.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'assign-nsrecord.parameters.json')]"
            },
                {
                "name": "aksRoleassignntTemplate",
                "rgName": "[concat('MC_', variables('rootRgName'), '_', variables('rootRgName'), '-k8s_norwayeast')]",
                "templateUrl": "[concat(variables('templateBaseUrl'), 'assign-aksroleassignment.json')]",
                "parametersUrl": "[concat(variables('parametersBaseUrl'), 'assign-aksroleassignment.parameters.json')]"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[variables('templateLoop1')[copyIndex()].rgName]",
            "copy": {
                "name": "rgCopy1",
                "count": "[length(variables('templateLoop1'))]"
            }
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[variables('templateLoop2')[copyIndex()].rgName]",
            "copy": {
                "name": "rgCopy2",
                "count": "[length(variables('templateLoop2'))]"
            }
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[variables('templateLoop3')[copyIndex()].rgName]",
            "copy": {
                "name": "rgCopy3",
                "count": "[length(variables('templateLoop3'))]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "resourceGroup": "[variables('templateLoop1')[copyIndex()].rgName]",
            "name": "[concat('nestedTemplate-', variables('templateLoop1')[copyIndex()].name)]",
            "copy": {
                "name": "templateCopy",
                "count": "[length(variables('templateLoop1'))]"
            },
            "dependsOn": [
                "rgCopy1"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateLoop1')[copyIndex()].templateUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('templateLoop1')[copyIndex()].parametersUrl]",
                    "contentVersion":"1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "resourceGroup": "[variables('templateLoop2')[copyIndex()].rgName]",
            "name": "[concat('nestedTemplate-', variables('templateLoop2')[copyIndex()].name)]",
            "copy": {
                "name": "templateCopy",
                "count": "[length(variables('templateLoop2'))]"
            },
            "dependsOn": [
                "rgCopy2"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateLoop2')[copyIndex()].templateUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('templateLoop2')[copyIndex()].parametersUrl]",
                    "contentVersion":"1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "resourceGroup": "[variables('templateLoop3')[copyIndex()].rgName]",
            "name": "[concat('nestedTemplate-', variables('templateLoop3')[copyIndex()].name)]",
            "copy": {
                "name": "templateCopy",
                "count": "[length(variables('templateLoop3'))]"
            },
            "dependsOn": [
                "rgCopy1"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateLoop3')[copyIndex()].templateUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('templateLoop3')[copyIndex()].parametersUrl]",
                    "contentVersion":"1.0.0.0"
                }
            }
        }
    ]
}
